{
    "name": "@workspace/database",
    "version": "0.0.0",
    "private": true,
    "main": "./src/index.ts",
    "type": "module",
    "scripts": {
        "lint": "eslint src --ext .ts",
        "check-types": "tsc --noEmit",
        "migrate:create": "pnpx tsx scripts/create-migration",
        "migrate:up": "pnpx tsx src/migrations/run up",
        "migrate:down": "pnpx tsx src/migrations/run down"
    },
    "exports": {
        ".": "./src/index.ts"
    },
    "dependencies": {
        "dotenv": "^16.4.7",
        "pg": "^8.13.3",
        "pg-format": "^1.0.4",
        "uuid": "^9.0.1",
        "@workspace/utils": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.17.24",
        "@types/pg": "^8.11.11",
        "@types/pg-format": "^1.0.5",
        "@types/uuid": "^9.0.8",
        "@workspace/eslint-config": "workspace:*",
        "@workspace/typescript-config": "workspace:*",
        "@workspace/types": "workspace:*",
        "typescript": "^5.8.2"
    }
}